// UPDATE THE NAME IN THE POSITIONS LIST
$('#inlist-position-<%= @position.id %>').find('h4').text('<%= @position.company_name.html_safe %>');

// REFRESH THE POSITION DISPLAYED
$('#position-selected').find('form').remove();
$('#position-selected').prepend('<%= j render "shared/position", position: @position %>');

// DISPLAY EDIT AND DELETE ICONS
$('.position-icons').css('display', 'block');
