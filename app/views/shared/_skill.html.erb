<%= simple_form_for(skill, remote: true) do |f| %>

  <div class="skill" id="skill-<%= skill.id %>">

    <div class="skill-name"><%= skill.name %></div>
    <%= f.input :name, required: false, label: false %>

    <div class="form-actions">
      <%= f.button :submit, "Save", class: "skills-save-button" %>
    </div>

    <div class="skill-icons">
      <i skill-id="<%= skill.id %>" class="fas fa-pencil-alt skill-icon edit-skill"></i>
      <%= link_to skill_path(skill), method: :delete, data: { confirm: "Are you sure?" }, remote: :true do %>
        <i skill-id="<%= skill.id %>" class="fas fa-trash-alt skill-icon"></i>
      <% end %>
    </div>
  </div>

<% end %>
