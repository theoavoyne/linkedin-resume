<div class="navbar-custom">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-custom-brand" do %>
    Resume Factory
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-custom-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <a href="#" class="navbar-custom-item navbar-custom-link">Templates</a>
      <a href="#" class="navbar-custom-item navbar-custom-link">FAQ</a>
      <a href="#" class="navbar-custom-item navbar-custom-link">Contact</a>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-custom-item">
        <div class="dropdown">
          <% avatar_url = current_user.linkedin_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-custom-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-custom-dropdown-menu">
            <li>
              <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <a href="#" class="navbar-custom-item navbar-custom-link">Templates</a>
      <a href="#" class="navbar-custom-item navbar-custom-link">FAQ</a>
      <a href="#" class="navbar-custom-item navbar-custom-link">Contact</a>

      <%= link_to user_linkedin_omniauth_authorize_path, class: "navbar-custom-item navbar-custom-link custom-btn", id: "loggin-btn" do %>
        <div id="logo-linkedin"><i class="fab fa-linkedin"></i></div>Sign in with Linkedin
      <% end %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-custom-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-custom-dropdown-menu">
        <% if user_signed_in? %>
          <li><a href="#" class="navbar-custom-item navbar-custom-link">Templates</a></li>
          <li><a href="#" class="navbar-custom-item navbar-custom-link">FAQ</a></li>
          <li><a href="#" class="navbar-custom-item navbar-custom-link">Contact</a></li>
          <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %></li>
        <% else %>
          <li><a href="#" class="navbar-custom-item navbar-custom-link">Templates</a></li>
          <li><a href="#" class="navbar-custom-item navbar-custom-link">FAQ</a></li>
          <li><a href="#" class="navbar-custom-item navbar-custom-link">Contact</a></li>

          <li><%= link_to t(".sign_up", default: "Sign up"), new_user_session_path, class: "navbar-custom-item navbar-custom-link" %></li>

          <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-custom-item navbar-custom-link" %></li>
          <% end %>
      </ul>
    </div>
  </div>
</div>

