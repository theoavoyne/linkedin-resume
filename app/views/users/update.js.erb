// UPDATING USER INFO

$('#first-name').find('h4').text("<%= current_user.first_name %>");
$('#last-name').find('h4').text("<%= current_user.last_name %>");
$('#headline').find('h4').text("<%= current_user.headline %>");
$('#location').find('h4').text("<%= current_user.location_name %>");
$('#email-address').find('h4').text("<%= current_user.email %>");

// HIDDING FORM

$('.form-control').css('display', 'none');

// DISPLAYING USER INFO
$('.section-attribute-value').children('h4').css('display', 'block');

// STYLING

$('#edit-buttons').removeClass('last-section-row');
$('.section-row').eq(-2).addClass('last-section-row');

// DISPLAYING EDIT BUTTON

$('#edit-personnal-details').css('display', 'block');
