<div id="top-banner" style="background-image: linear-gradient(225deg,rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url('<%= image_path "background3.jpg"%>')">
  <h1>Editor</h1>
</div>

<div id="editor-wrapper">
  <div class="row">
    <div class="col-sm-6">
      <div class="accordion" id="accordion">

        <!-- PERSONNAL DETAILS -->
        <div class="section">
          <%= render 'editor_sections/personnal_details', user: @user %>
        </div>

        <div class="section">
          <%= render 'editor_sections/skills', skills: @skills %>
        </div>

      </div>
    </div>

    <div class="col-sm-6">
      <embed width="630px" height="891px" src=<%= resume_path(format: :pdf) %>>
    </div>

  </div>
</div>

<%= javascript_pack_tag 'editor', media: 'all' %>
