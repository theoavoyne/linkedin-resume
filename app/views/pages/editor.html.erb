<div id="top-banner">
  <h1>Editor</h1>
</div>

<div id="editor-wrapper">
  <div class="row">
    <div class="col-sm-6">
      <div class="accordion" id="accordion">

        <!-- PERSONNAL DETAILS -->
        <div class="section">

          <!-- SECTION HEADER -->
          <div class="collapsed section-header" type="button" data-toggle="collapse" data-target="#personnal-details" aria-expanded="false" aria-controls="collapseOne">
            <div class="display-flex">
              <i class="fas fa-user section-icon"></i>
              <div>PERSONNAL DETAILS</div>
            </div>
            <i class="fas fa-chevron-right chevron"></i>
          </div>

          <!-- SECTION CONTENT -->
          <div id="personnal-details" class="collapse section-content" aria-labelledby="personnal-details" data-parent="#accordion">

            <%= simple_form_for(@user, remote: true) do |f| %>

              <div class="section-row">
                <img src="<%= current_user.linkedin_picture_url%>" id= "personnal-image" alt="">
                <div class="section-attribute">
                  <p class="label-name">First name</p>
                  <div class="section-attribute-value">
                    <h4 id="first-name"><%= current_user.first_name %></h4>
                    <%= f.input :first_name, required: true, label: false, autofocus: true %>
                  </div>
                </div>
                <div class="section-attribute">
                  <p class="label-name">Last name</p>
                  <div class="section-attribute-value">
                    <h4 id="last-name"><%= current_user.last_name %></h4>
                    <%= f.input :last_name, required: true, label: false %>
                  </div>
                </div>
              </div>

              <div class="section-row">
                <div class="section-attribute">
                  <p class="label-name">Headline</p>
                  <div class="section-attribute-value">
                    <h4 id="headline"><%= current_user.headline %></h4>
                    <%= f.input :headline, required: false, label: false, :as => "string" %>
                  </div>
                </div>
              </div>

              <div class="section-row last-section-row">
                <div class="section-attribute">
                  <p class="label-name">From</p>
                  <div class="section-attribute-value">
                    <h4 id="location"><%= current_user.location_name %></h4>
                    <%= f.input :location_name, required: false, label: false %>
                  </div>
                </div>
                <div class="section-attribute">
                  <p class="label-name">Email Address</p>
                  <div class="section-attribute-value">
                    <h4 id="email-address"><%= current_user.email %></h4>
                    <%= f.input :email, required: false, label: false %>
                  </div>
                </div>
              </div>

              <div id="edit-buttons" class="section-row">
                <div class="form-actions">
                  <%= f.button :submit, "Save changes", id: "save-button" %>
                </div>
              </div>

            <% end %>

            <i id="edit-personnal-details" class="fas fa-pencil-alt"></i>

          </div>

        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <embed width="630px" height="891px" src=<%= resume_path(format: :pdf) %>>
    </div>

  </div>
</div>

<%= javascript_pack_tag 'editor', media: 'all' %>
