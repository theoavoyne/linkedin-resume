<!-- Banner -->
<div class="landing-wrapper">
  <div id="flex-banner">
    <% if user_signed_in? %>
      <h1>Welcome back <%= current_user.first_name %>!</h1>
      <a href="#" class="custom-btn-big scroll-to-pick-a-template">Create new resume</a>
    <% else %>
      <h1 class="landing-title">Resume Factory</h1>
      <h2 class="landing-subtitle">Instantly create your resume with LinkedIn</h2>
      <%= link_to 'Create my resume', user_linkedin_omniauth_authorize_path, class: 'custom-btn-big' %>
    <% end %>
  </div>
</div>

<!-- Steps -->
<div class="row banner-geometric-shape">
  <div class="col-xs-12 col-md-4 left-rectangle">
    <!-- If user logged in, the first step is completed, so there is a tick
    istead of 1 -->
    <span class="step">
      <%= user_signed_in? ? content_tag(:i, "", class: ["fas", "fa-check"]) : 1 %>
    </span>
    <p>Login / Sign up</p>
  </div>
  <div class="col-xs-12 col-md-4 middle-rectangle">
    <span class="step">2</span>
    <p>Pick a template</p>
    <div class="triangle triangle-middle"></div>
  </div>
  <div class="col-xs-12 col-md-4 right-rectangle">
    <span class="step">3</span>
    <p>Download your resume!</p>
    <div class="triangle triangle-right"></div>
  </div>
</div>

<!-- Resume templates -->

<div class="container section-templates">
  <h3 class="template-intro-title">Pick a template</h3>
  <div class="row carousel-templates">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="template" data-template="finance" style="background-image: url('<%= image_path "Resume.jpg"%>')"></div>
      <h4 class= "template-title">Finance</h4>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="template" data-template="law" style="background-image: url('<%= image_path "Resume.jpg"%>')"></div>
      <h4 class= "template-title">Law</h4>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="template" data-template="design" style="background-image: url('<%= image_path "Resume.jpg"%>')"></div>
      <h4 class= "template-title">Design</h4>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="template" data-template="tech" style="background-image: url('<%= image_path "Resume.jpg"%>')"></div>
      <h4 class= "template-title">Tech</h4>
    </div>
  </div>
  <% if user_signed_in? %>
    <%= simple_form_for current_user do |f| %>
      <%= f.input :template, label: false %>
      <%= f.button :submit, value: 'View my new resume', class: 'custom-btn-big btn-to-editor btn-inactive' %>
    <% end %>
  <% else %>
    <%= link_to 'View my new resume', editor_path, class: 'custom-btn-big btn-to-editor' %>
  <% end %>
</div>

